        <script><![CDATA[(function executeRule(current, previous /*null when async*/) 
{

var theUser = current.user;
var theGroup = current.group;
	
//gs.info("theUser: " + theUser + " | " + "theGroup: " + theGroup);

var gr = new GlideRecord('sys_user_grmember');	
	gr.addQuery('user', theUser);
	gr.addQuery('group', theGroup);
	gr.query();

	if(!gr.next())
	{
		//gs.info("user not found on user_grmember");
		addToGroup(theUser, theGroup);
	}


function addToGroup(user, group)
{
	//gs.info("adding user to group");
	//gs.info("ADDING user: " + user + " | " + "ADDING group: " + group);
	

	var gr = new GlideRecord('sys_user_grmember');	
		
		gr.initialize();
	
		gr.user = user;
		gr.group = group;
	
		gr.insert();
}
	



	
})(current, previous);]]></script>
